<!DOCTYPE html>
<html>
  <head>
    <title>Add Task</title>
    <%- include('../layout/styles') %>
  </head>
  <body>
    <header>
      <h1>Task Detail</h1>
      <%- include('../layout/nav') %>
    </header>
    <main>
      <h2><%= task.title %></h2>
      <form method="POST" action="/tasks/<%= task.id %>?_method=DELETE">
        <button>Delete Task</button>
      </form>
      <p><%= task.description %></p>
      <p>Contact: <%= task.contact %></p>
      <p>From Ctor: <%= task.isFromConstructor %></p>
    </main>
    <%- include('../layout/footer') %>
  </body>
</html>